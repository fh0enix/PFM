<div class="card text-center">
  <div class="card-header">
    <%= params["spend_earn"] == 0 ? 'Дохід' : 'Витрата'%>
  </div>
  <div class="card-body">
    <h5 class="card-title">Дата з: <%= params["date_from"]%> по: <%= params["date_to"] %></h5>
    <div>
    <canvas id="report_category"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
      const ctx = document.getElementById('report_category');

      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: <%= raw @categories %>,
          datasets: [{
            label: 'грн',
            data: <%= raw  @operations %>,
            borderWidth: 1
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
    </script>
  </div>
</div>