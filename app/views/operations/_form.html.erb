<%= form_with(model: operation) do |form| %>
  <% if operation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
        <% operation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
  <label class="form-label">категорія</label>
    <%= select(:operation, :category_id, Category.all.map{ |u| [ u.name, u.id ] }, {}, {class:"form-select"}) %>
  </div>

  <br>

  <div class="form-check">
    <%= label :spend_earn, "Витрата", value: true %>
    <%= form.radio_button :spend_earn, false, :checked => true, :value => false, class: "form-check-input" %>
  </div>
  <div class="form-check">
    <%= label :spend_earn, "Дохід", value: false %>
    <%= form.radio_button :spend_earn, true, :value => true, class: "form-check-input" %>
  </div>

  <br>

  <div class="mb-3">
    <label class="form-label">сума</label>
    <%= form.text_field :sum, class: "form-control", placeholder: "0.00" %>
  </div>

  <br>

  <div class="mb-3">
    <%= form.text_field :description, class: "form-control", placeholder: "опис" %>
  </div>

    <br>

  <div class="field">
    <%= form.date_field :date, value: Time.now.strftime('%Y-%m-%d'), class: 'form-control' %>
  </div>

    <br>

  <div>
    <%= form.submit "підтвердити", class: 'btn btn-success' %>
  </div>
<% end %>
